{
  "compilerOptions": {
    "lib": ["ES2019", "DOM"],
    "target": "es2018",
    "module": "es2022",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "dts",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
